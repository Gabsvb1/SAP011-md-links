{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "semi": ["error" , "always"], 
        "quotes": ["error" , "single"],
        "indent":  ["error", 4],
        "linebreak-style": ["error", "unix"],
        "no-empty": "warn",
        "no-cond-assign": ["error", "always"],
        "for-direction": "off"

    }
}
